<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>

    <!--属性配置 把一些统一的配置都放到这个里，在下面用-->
    <!--    <properties>-->
    <!--    </properties>-->

    <!--设置配置-->
    <settings>
        <!--下划线转换为驼峰-->
        <setting name="mapUnderscoreToCamelCase" value="true"/>
        <!--二级缓存开关-->
        <setting name="cacheEnabled" value="true"/>
        <!--延迟（懒）加载总开关-->
        <setting name="lazyLoadingEnabled" value="true"/>
        <!--将aggressiveLazyLoading设置为false表示按需加载，默认为true-->
        <setting name="aggressiveLazyLoading" value="false"/>
    </settings>

    <!--类型别名配置-->
    <typeAliases>
        <typeAlias type="net.xdclass.demoproject.domain.Video" alias="Video"/>
        <typeAlias type="net.xdclass.demoproject.domain.VideoOrder" alias="VideoOrder"/>
        <typeAlias type="net.xdclass.demoproject.domain.User" alias="User"/>
    </typeAliases>

    <!--对象工厂 重写创建方法，帮忙创建对象-->
